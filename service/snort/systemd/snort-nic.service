[Unit]
Description=Set Snort 3 Network Interfaces to Promiscuous Mode
After=network.target

[Service]
Type=oneshot
# Menggunakan placeholder agar bisa diisi otomatis oleh skrip setup
ExecStart=/sbin/ip link set dev WAN_IF_PLACEHOLDER promisc on
ExecStart=/sbin/ip link set dev LAN_IF_PLACEHOLDER promisc on
ExecStart=/sbin/ethtool -K WAN_IF_PLACEHOLDER gro off lro off
ExecStart=/sbin/ethtool -K LAN_IF_PLACEHOLDER gro off lro off
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target